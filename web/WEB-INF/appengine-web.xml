<?xml version="1.0" encoding="UTF-8"?>
<appengine-web-app xmlns="http://appengine.google.com/ns/1.0"
                   xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
                   xsi:schemaLocation='http://kenai.com/projects/nbappengine/downloads/download/schema/appengine-web.xsd appengine-web.xsd'>
    
    <!-- Basic app settings -->
    <application>battlescribedata</application>
    <version>10</version>
    <threadsafe>true</threadsafe>
    
    <instance-class>B8</instance-class>
    <manual-scaling>
        <instances>1</instances>
    </manual-scaling>
    
    <!-- Mark all HTML/CSS/JS/Image files as static -->
    <static-files>
        <include path="/**.html" />
        <include path="/**.css" />
        <include path="/**.js" />
        <include path="/**.map" />
        <include path="/**.png" />
        <include path="/**.jpg" />
        <include path="/**.jpeg" />
        <include path="/**.gif" />
        <include path="/**.xml" />
        <include path="/**.txt" />
    </static-files>
    
    <!-- Enable Appengine logging -->
    <system-properties>
        <property name="java.util.logging.config.file" value="WEB-INF/logging.properties"/>
    </system-properties>
    
</appengine-web-app>
