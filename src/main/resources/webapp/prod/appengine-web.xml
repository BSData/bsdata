<?xml version="1.0" encoding="utf-8"?>
<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
    
    <!-- Basic app settings -->
    <application>battlescribedata</application>
    <version>16</version>
    <runtime>java8</runtime>
    <threadsafe>true</threadsafe>
    
    <!-- AppEngine instance class -->
    <instance-class>B4_1G</instance-class>
    <manual-scaling>
        <instances>1</instances>
    </manual-scaling>
    
    <!-- Mark all HTML/CSS/JS/Image files as static -->
    <static-files>
        <include path="/**.html" />
        <include path="/**.css" />
        <include path="/**.js" />
        <include path="/**.map" />
        <include path="/**.png" />
        <include path="/**.jpg" />
        <include path="/**.jpeg" />
        <include path="/**.gif" />
        <include path="/**.xml" />
        <include path="/**.txt" />
    </static-files>
    
    <!-- Enable logging -->
    <system-properties>
        <property name="java.util.logging.config.file" value="WEB-INF/logging.properties"/>
    </system-properties>
    
</appengine-web-app>
